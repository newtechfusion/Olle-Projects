<h1>Listing items</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Reference type</th>
    <th>Reference address</th>
    <th>Reference chapter</th>
    <th>Reference pagenumber</th>
    <th>Body</th>
    <th>Geotag</th>
    <th>Typeid</th>
    <th>People</th>
    <th>Projectid</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.Title %></td>
    <td><%= item.Reference_Type %></td>
    <td><%= item.Reference_Address %></td>
    <td><%= item.Reference_Chapter %></td>
    <td><%= item.Reference_PageNumber %></td>
    <td><%= item.Body %></td>
    <td><%= item.GeoTag %></td>
    <td><%= item.TypeId %></td>
    <td><%= item.People %></td>
    <td><%= item.ProjectId %></td>
    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

