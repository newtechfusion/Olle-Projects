<h1>Listing contexts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @contexts.each do |context| %>
  <tr>
    <td><%= context.Title %></td>
    <td><%= context.Body %></td>
    <td><%= link_to 'Show', context %></td>
    <td><%= link_to 'Edit', edit_context_path(context) %></td>
    <td><%= link_to 'Destroy', context, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

